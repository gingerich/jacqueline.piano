import ContactForm from '../components/contact/ContactForm.astro';

interface Data {
  title: string;
  description: string;
}

interface Props {
  frontmatter: Data;
}

const { title, description } = Astro.props.frontmatter;

const pageTitle = `${title} Â· Jacquie Teaches`;
---

<Layout title={pageTitle} {description}>
